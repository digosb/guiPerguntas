<%- include ('../public/parcial/header.ejs') %>
    <body>
 <%- include ('../public/parcial/navbar.ejs') %>

   <div class="container">
    <hr>
    <h1><%= tbperguntas.titulo %></h1> 
    <p><%= tbperguntas.descricao %></p>
    <hr>
    <form method="post" action="/responder">
        <h3>Responda</h3>
        <label>Resposta:</label>
        <textarea placeholder="Digite sua Resposta" class="form-control" name="corpo"></textarea>
        <br>
        <input type="hidden" name="pergunta" value="<%= tbperguntas.id %>">
        <button type="submit" class="btn btn-success">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% tbrespostas.forEach(tbrespostas => { %>
    <br>
    <div class="card">
    <div class="card-body">
        <p><%= tbrespostas.corpo %></p>
        
    </div>
        
    </div>
    <% }) %>

   </div>
    </body>
